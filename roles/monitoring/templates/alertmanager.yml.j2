---
# roles/monitoring/templates/alertmanager.yml.j2
# Alertmanager configuration with ethical notification practices
global:
  resolve_timeout: 5m
  # Ethical: Include context in notifications
  http_config:
    follow_redirects: true
  smtp_smarthost: 'mailcow:587'
  smtp_from: 'alerts@{{ domain_name }}'
  smtp_auth_username: 'alerts@{{ domain_name }}'
  smtp_auth_password: '{{ smtp_password }}'
  smtp_require_tls: true

# Notification templates
templates:
  - '/etc/alertmanager/templates/*.tmpl'

# Route tree
route:
  group_by: ['alertname', 'cluster', 'service']
  group_wait: 10s
  group_interval: 10s
  repeat_interval: 12h
  receiver: 'team-notifications'
  
  routes:
    # Critical security alerts
    - match:
        category: security
        severity: critical
      receiver: security-team
      group_wait: 0s
      repeat_interval: 1h
      
    # Privacy and compliance alerts
    - match_re:
        category: privacy|compliance
      receiver: compliance-team
      group_wait: 30s
      repeat_interval: 4h
      
    # Performance alerts
    - match:
        category: performance
      receiver: ops-team
      group_wait: 5m
      repeat_interval: 6h

# Receivers
receivers:
  - name: 'team-notifications'
    email_configs:
      - to: '{{ team_email }}'
        headers:
          Subject: 'SummitEthic Alert: {{ .GroupLabels.alertname }}'
        html: |
          <h2>ðŸš¨ Alert: {{ .GroupLabels.alertname }}</h2>
          <p><strong>Environment:</strong> {{ .CommonLabels.environment }}</p>
          <p><strong>Severity:</strong> {{ .CommonLabels.severity }}</p>
          <h3>Alerts:</h3>
          {{ range .Alerts }}
          <hr>
          <p><strong>{{ .Labels.alertname }}</strong></p>
          <p>{{ .Annotations.description }}</p>
          <p><strong>Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05" }}</p>
          {{ end }}
          <hr>
          <p><em>This alert was generated by SummitEthic monitoring system following ethical practices.</em></p>
    
  - name: 'security-team'
    email_configs:
      - to: '{{ security_team_email }}'
        send_resolved: true
    webhook_configs:
      - url: '{{ security_webhook_url }}'
        send_resolved: true
        
  - name: 'compliance-team'
    email_configs:
      - to: '{{ compliance_team_email }}'
        send_resolved: true
        
  - name: 'ops-team'
    slack_configs:
      - api_url: '{{ slack_webhook_url }}'
        channel: '#ops-alerts'
        title: 'SummitEthic Alert'
        text: '{{ range .Alerts }}{{ .Annotations.summary }}{{ end }}'

# Inhibition rules
inhibit_rules:
  - source_match:
      severity: 'critical'
    target_match:
      severity: 'warning'
    equal: ['alertname', 'instance']